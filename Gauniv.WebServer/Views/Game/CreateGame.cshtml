@model GameViewModel
@using X.PagedList.Mvc.Core;
@using X.PagedList;
@{
    ViewData["Title"] = "View";
}
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
<link href="~/css/edit-game.css" rel="stylesheet" type="text/css" />

<h2>Create a New Game</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name">Game Name</label>
        <input asp-for="Name" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="Price">Price (€)</label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" required />
    </div>

    <div class="category-label">
        <label>Add Categories</label>
    </div>
    <div class="form-group">
        @foreach (var category in Model.AvailableCategories)
        {
            <div class="form-check">
                <input type="checkbox" name="Categories" value="@category.Value" class="form-check-input" />
                <label class="form-check-label">@category.Text</label>
            </div>
        }
    </div>

    <div class="form-group">
        <label asp-for="Payload">Upload Game File</label>
        <input type="file" name="payloadFile" class="form-control" />
    </div>

    <div class="button-group">
        <button type="submit" class="btn btn-success">
            <i class="fas fa-save"></i> Create Game
        </button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back
        </a>
    </div>
</form>