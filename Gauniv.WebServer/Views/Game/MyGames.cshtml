@model IndexViewModel
@{
    ViewData["Title"] = "Mes Jeux";
}

<link href="~/css/game-display.css" rel="stylesheet" type="text/css" />
<style>
    /* Styles spécifiques pour la page Mes Jeux */
    .mygames-header {
        text-align: center;
        margin-bottom: 20px;
    }
    .mygames-header h1 {
        font-size: 2.5rem;
        color: white;
    }
    .back-button {
        margin: 20px auto;
        display: block;
        width: fit-content;
    }
</style>

<div class="mygames-header">
    <h1>Mes Jeux</h1>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary back-button">
        <i class="fas fa-arrow-left"></i> Retour à la liste des jeux
    </a>
</div>

<div class="game-grid">
    @foreach (var game in Model.Games)
    {
        <div class="game-card">
            <div class="game-header">
                <span class="game-id">#@game.Id</span>
                <h2 class="game-name">@game.Name</h2>
            </div>
            <p class="game-description">@game.Description</p>
            <div class="price-container">
                <p>Price : </p> $@game.Price
            </div>
            <div class="category-container">
                @foreach (var category in game.Categories)
                {
                    <span class="category">@category.Name</span>
                }
            </div>
            <!-- Vous pouvez ajouter ici d'autres actions spécifiques à l'utilisateur sur ses jeux -->
        </div>
    }
</div>
