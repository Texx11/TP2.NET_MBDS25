@model CreateCategoryViewModel
@using X.PagedList.Mvc.Core;
@using X.PagedList;
@{
    ViewData["Title"] = "View";
}
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
<link href="~/css/new-category.css" rel="stylesheet" type="text/css" />

<h2>Create a New Category</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data" class="category-form">
    <div class="form-group">
        <label asp-for="Name">Game Name</label>
        <input asp-for="Name" class="form-control" required />
    </div>

    <div class="button-group">
        <button type="submit" class="btn btn-success">
            <i class="fas fa-save"></i> Create Category
        </button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back
        </a>
    </div>
</form>