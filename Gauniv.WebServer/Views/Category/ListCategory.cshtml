@model CategoryViewModel
@using X.PagedList.Mvc.Core;
@using X.PagedList;
@{
    ViewData["Title"] = "ListCategory";
    bool isAdmin = User.IsInRole("Admin");
}
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
<link href="~/css/new-category.css" rel="stylesheet" type="text/css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

<h1>Listes des Catégories</h1>

<div class="category-grid">
    @foreach (var category in Model.Categories)
    {
        <div class="category-card">
            <div class="card-header">
                <h2 class="category-name">@category.Name</h2>
            </div>
            <div class="card-body">
                <p><strong>ID :</strong> @category.Id</p>
            </div>
            @if (isAdmin)
            {
                <div class="card-footer">
                    <a asp-controller="Category" asp-action="EditCategory" asp-route-id="@category.Id" class="btn btn-primary style-button">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger style-button">
                        <i class="fas fa-trash"></i>
                    </a>
                </div>
            }
        </div>
    }
</div>
