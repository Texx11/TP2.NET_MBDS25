@{
    ViewData["Title"] = "Joueurs en ligne";
}

<style>
    h2 {
        transform: scale(1.3);
    }
    
    h3 {
        margin-top: 3rem;
    }

    .users-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 15px;
        margin-top: 20px;
    }

    .user-card {
        background: #f8f9fa;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        padding: 15px;
        text-align: center;
        min-width: 150px;
    }

        .user-card h4 {
            margin: 0 0 10px 0;
            font-size: 1.2em;
            color: #333;
        }

        .user-card p {
            margin: 0;
            font-size: 0.9em;
            color: #666;
        }

    .status {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 5px;
    }

    .status-indicator {
        display: inline-block;
        width: 10px;
        height: 10px;
        background-color: #28a745;
        border-radius: 50%;
    }
</style>

<h2>Liste des joueurs</h2>
<div id="onlineUsersList">
